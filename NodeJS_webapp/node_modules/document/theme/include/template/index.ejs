<% include header %>
<% if (config.repository && config.repository.url) { %>
    <a href="<%= config.repository.url %>" target="_blank" id="github-ribbon"><img src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub"></a>
<% } %>

<div class="container-fluid fluid-height wrapper">
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <a class="brand pull-left" href="<%= config.site_root %>"><%= config.title %></a>

            <div class="dropdown navbar-text pull-right"> 
                <% if (config.languages) {
                    %><a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= tree.language_text %> <b class="caret"></b></a>
                    <ul class="dropdown-menu" role="menu"><%
                    var l;
                    var text;
                    for (l in config.languages) {
                        text = config.languages[l];
                        var li_class = l === tree.language ? ' class="disabled"' : '';

                        %><li<%- li_class %>>
                            <a href="<%= config.site_root %>/<%= l %>"><%= text %></a>
                        </li><%
                    }
                    %></ul><%
                } %>
            </div>
        </div>
    </div>

    <div class="row-fluid columns content">
        <% include sidebar %>
        <% include content %>
    </div>
</div>
<% include footer %>
</body>
<% include scripts %>
</html>